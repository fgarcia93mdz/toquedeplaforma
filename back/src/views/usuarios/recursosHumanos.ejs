<!DOCTYPE html>
<html class="html" lang="en">

<head>
  <meta charset="UTF-8">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Gestión de usuarios</title>

  <link rel="shortcut icon" href="/img/logo/logo.svg" style="border-radius: 100;" />


  <!--=====================================
	PLUGINS DE CSS
	======================================-->

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Kalam&family=Roboto&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://kit.fontawesome.com/22284035c9.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/rrhh.css">
</head>

<body>

  <%- include('../partial/navRrhh') %>
  <br>

  <h2 style="text-align: center">GESTIÓN DE USUARIOS</h2>
  <% if(usuario.estado_password===0) { %>
  <a href="/ingreso/sector/<%- usuario.id %>/cambiarClave">
    <h3
      style="color: red; background-color:rgba(188, 187, 187, 0.721); border-radius: 10px; width: 100%; text-decoration:none">
      Te recordamos <%- usuario.nombre %> que por políticas de seguridad debes de cambiar la contraseña
      predeterminada que generó recursos humanos antes de continuar </h3>
  </a>
  <% } else { %>
  <br>
  <table>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Usuario</th>
      <th style="width: 20%; text-align:center">Rol</th>
      <th style="width: 1%; text-align:center">Editar</th>
      <th style="width: 1%; text-align:center">Eliminar</th>
    </tr>
    <% usuarios.forEach(usuarios=> { %>
    <tr>
      <td>
        <%- usuarios.nombre %>
      </td>
      <td>
        <%- usuarios.apellido %>
      </td>
      <td>
        <%- usuarios.usuario %>
      </td>
      <td style="text-align:center">
        <%- usuarios.rol_usuario.rol %>
      </td>
      <% if (usuarios.rol_usuario.id <=2) { %>
      <td style="text-align:center"> - </td>
      <td style="text-align:center"> - </td>
      <% } else { %>
      <td style="text-align:center">
        <a href="/ingreso/sector/recursosHumanos/modificarUsuario/<%- usuarios.id %>">
        <svg class="input-icon" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.8 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
        </svg>
      </a>
      </td>
      <td style="text-align:center">
        <a href="/ingreso/sector/recursosHumanos/eliminarUsuario/<%- usuarios.id %>">
          <svg class="input-icon" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
          </svg>
        </a>
      </td>
      <% } %>
    </tr>
    <% }) %>
  </table>
  <% } %>

  <script src="/js/nav.js"></script>
</body>

</html>